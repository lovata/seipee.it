#Redirect from www to without www
server {
    listen               80;
    listen               443 ssl;
    server_name          www.seipee.it;
    ssl_certificate /etc/nginx/ssl/server.crt;
    ssl_certificate_key /etc/nginx/ssl/private.key;

    return 301 $scheme://seipee.it$request_uri;
}

server {
    listen 80;

    # For https
    listen 443 ssl http2;
    ssl_certificate /etc/nginx/ssl/server.crt;
    ssl_certificate_key /etc/nginx/ssl/private.key;
    ssl_protocols TLSv1.2;

    server_name seipee.it;

    # Redirect /foobar/ and /foobar/index.html to /foobar
    #rewrite ^(.+)/+$ $1 permanent;

    rewrite ^(.*/)index\.(php|html?)$ $1 permanent;
    if ($request_uri ~* "^(.*)/index\.php(.*)") {
       return 301 $1$2;
    }

    # Redirect to https
    if ($scheme = http) {
        return 301 https://$server_name$request_uri;
    }

    root /var/www/html;
    index index.php index.html index.htm;

    location /backend {
         rewrite ^/.*$ /index.php last;
    }

    location / {
        if (!-e $request_filename) {
            rewrite ^(.*[^/])$ $1/ permanent;
        }

        rewrite ^/.*$ /index.php last;
    }

    error_log  /var/log/nginx/error.log;
    access_log /var/log/nginx/access.log;

    location = /favicon.ico { access_log off; log_not_found off; }
    location = /robots.txt  { access_log off; log_not_found off; }

    error_page 404 /index.php;

    include snippets/gzip.conf;
    include snippets/static.conf;
    include snippets/php.conf;
    include snippets/whitelist.conf;

    location ~ /\.ht {
        deny all;
    }
}
